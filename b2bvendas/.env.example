# Database Configuration
DATABASE_URL="postgresql://b2buser:b2bpass@localhost:5432/b2bvendas?schema=public"
POSTGRES_USER=b2buser
POSTGRES_PASSWORD=b2bpass
POSTGRES_DB=b2bvendas
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL="redis://:redispass@localhost:6379"
REDIS_PASSWORD=redispass
REDIS_PORT=6379

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# Application Configuration
NODE_ENV=development
APP_PORT=3000
APP_VERSION=0.1.0

# Email Configuration
# Resend API (Recommended)
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=B2B Vendas <noreply@b2bvendas.com>

# Alternative: SMTP Configuration (if not using Resend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@b2bvendas.com
SMTP_SECURE=false

# Email Queue Configuration
EMAIL_QUEUE_CONCURRENCY=10
EMAIL_QUEUE_MAX_ATTEMPTS=3
EMAIL_QUEUE_RATE_LIMIT_MAX=100
EMAIL_QUEUE_RATE_LIMIT_DURATION=60000

# Security Configuration
# Rate Limiting
RATE_LIMIT_WHITELIST=127.0.0.1,::1
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CSRF Protection
CSRF_TOKEN_LENGTH=32
CSRF_TOKEN_EXPIRY=86400000

# Audit Logs
AUDIT_LOG_RETENTION_DAYS=90

# File Upload Configuration (Optional)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

